<form>
  <label>CyberFacts by Feed Examples (JSON data)</label>
  <fieldset autoRun="true" submitButton="false">
    <input type="dropdown" token="feed_id_tok">
      <label>Select a Feed to visualize</label>
      <default>-100</default>
      <choice value="-10">Consumer Goods</choice>
      <choice value="-6">Energy</choice>
      <choice value="-1">Entertainment</choice>
      <choice value="-3">Financials</choice>
      <choice value="-4">Government</choice>
      <choice value="-5">Healthcare</choice>
      <choice value="-11">Industrials</choice>
      <choice value="-7">Information Technology</choice>
      <choice value="-8">Materials</choice>
      <choice value="-12">Other Organizations</choice>
      <choice value="-101">Surfwatch Dark Web</choice>
      <choice value="-13">Telecommunications</choice>
      <choice value="-100">Universal Data Feed</choice>
      <choice value="-9">Utilities</choice>
    </input>
    <input type="dropdown" token="index_tok">
      <label>Select an index</label>
      <default>swl_sample_cyberfacts</default>
      <choice value="swl_sample_cyberfacts">swl_sample_cyberfacts</choice>
      <choice value="swl_cyberfacts">swl_cyberfacts</choice>
    </input>
  </fieldset>
  <row>
    <panel>
      <title>Top Effects over last 7 days</title>
      <chart>
        <search>
          <query>index=$index_tok$ sourcetype=*cyberfact_json cyberfact_polarity=-1 "tags{}.tag_super_type_id"=5 "data_feed_ids{}"=$feed_id_tok$ | spath | rename "tags{}.macro_tag" as macro_tag | rename "tags{}.tag_super_type_id" as tag_super_type_id | eval x=mvzip(macro_tag,tag_super_type_id) | mvexpand x | eval x = split(x,",") | eval macro_tag=mvindex(x,0) | eval tag_super_type_id=mvindex(x,1) | search tag_super_type_id=5 | stats c(macro_tag) as count by macro_tag | fieldformat count=count/2</query>
          <earliest>-7d@d</earliest>
          <latest>now</latest>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">pie</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
    <panel>
      <title>Most impacted Industry Groups over last 7 days</title>
      <chart>
        <search>
          <query>index=$index_tok$ sourcetype=*cyberfact_json "data_feed_ids{}"=$feed_id_tok$ | top limit=10 industry_targets{}.industry_group_description</query>
          <earliest>-7d@d</earliest>
          <latest>now</latest>
        </search>
        <option name="charting.chart">pie</option>
        <option name="charting.axisY2.enabled">undefined</option>
      </chart>
    </panel>
  </row>
  <row>
    <panel>
      <title>Top Practice categories over last 7 days</title>
      <chart>
        <search>
          <query>index=$index_tok$ sourcetype=*cyberfact_json cyberfact_polarity=-1 "tags{}.tag_super_type_id"=3 "data_feed_ids{}"=$feed_id_tok$ | spath | rename "tags{}.macro_tag" as macro_tag | rename "tags{}.tag_super_type_id" as tag_super_type_id | eval x=mvzip(macro_tag,tag_super_type_id) | mvexpand x | eval x = split(x,",") | eval macro_tag=mvindex(x,0) | eval tag_super_type_id=mvindex(x,1) | search tag_super_type_id=3 | stats c(macro_tag) as count by macro_tag | fieldformat count=count/2</query>
          <earliest>-7d@d</earliest>
          <latest>now</latest>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">pie</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
    <panel>
      <title>Organizations most effected by data breaches over the last 7 days</title>
      <chart>
        <search>
          <query>index=$index_tok$ sourcetype=*cyberfact_json "data_feed_ids{}"=$feed_id_tok$ cyberfact_type_id=8 | top limit=20 "industry_targets{}.industry_target_description"</query>
          <earliest>-7d@d</earliest>
          <latest>now</latest>
        </search>
        <option name="charting.axisLabelsX.majorLabelStyle.overflowMode">ellipsisNone</option>
        <option name="charting.axisLabelsX.majorLabelStyle.rotation">0</option>
        <option name="charting.axisTitleX.visibility">visible</option>
        <option name="charting.axisTitleY.visibility">visible</option>
        <option name="charting.axisTitleY2.visibility">visible</option>
        <option name="charting.axisX.scale">linear</option>
        <option name="charting.axisY.scale">linear</option>
        <option name="charting.axisY2.enabled">false</option>
        <option name="charting.axisY2.scale">inherit</option>
        <option name="charting.chart">pie</option>
        <option name="charting.chart.bubbleMaximumSize">50</option>
        <option name="charting.chart.bubbleMinimumSize">10</option>
        <option name="charting.chart.bubbleSizeBy">area</option>
        <option name="charting.chart.nullValueMode">gaps</option>
        <option name="charting.chart.sliceCollapsingThreshold">0.01</option>
        <option name="charting.chart.stackMode">default</option>
        <option name="charting.chart.style">shiny</option>
        <option name="charting.drilldown">all</option>
        <option name="charting.layout.splitSeries">0</option>
        <option name="charting.legend.labelStyle.overflowMode">ellipsisMiddle</option>
        <option name="charting.legend.placement">right</option>
      </chart>
    </panel>
  </row>
</form>
